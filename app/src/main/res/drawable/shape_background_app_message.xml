<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layers-->

    <item
        android:bottom="100dp"
        android:end="125dp"
        android:start="-25dp">
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <padding
                    android:bottom="1px"
                    android:left="1px"
                    android:right="1px" />
                <gradient
                    android:centerColor="@color/firekit_theme_shadow_2"
                    android:endColor="@color/firekit_theme_shadow_1"
                    android:startColor="@color/firekit_theme_shadow_3" />

            </shape>
        </rotate>
    </item>
    <item android:left="8dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="@color/firekit_theme_shadow_1" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!--===============-->
    <item
        android:bottom="75dp"
        android:end="100dp"
        android:start="0dp">
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <padding android:bottom="1px" />
                <gradient
                    android:centerColor="@color/firekit_theme_shadow_3"
                    android:endColor="@color/firekit_theme_shadow_2"
                    android:startColor="@color/fireKit_opposite_theme_25" />

            </shape>
        </rotate>
    </item>
    <item android:left="8dp">
        <shape android:shape="rectangle">
            <padding android:bottom="1px" />
            <solid android:color="@color/firekit_theme_shadow_2" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!--===============-->

    <item
        android:bottom="50dp"
        android:end="75dp"
        android:start="25dp">
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <padding
                    android:bottom="1px"
                    android:left="1px"
                    android:right="1px" />
               <gradient
                    android:centerColor="@color/fireKit_window_back_center"
                    android:endColor="@color/profile_cover_box_end"
                    android:startColor="@color/profile_cover_box_start" />
            </shape>
        </rotate>
    </item>
    <item android:left="8dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="@color/firekit_theme_shadow_3" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!--ForeGround-->

    <item
        android:bottom="25dp"
        android:end="50dp"
        android:start="50dp">
        <rotate
            android:fromDegrees="-35"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <corners android:radius="8dp" />
                <gradient
                    android:centerColor="@color/fireKit_opposite_theme_25"
                    android:endColor="@color/firekit_theme_shadow_3"
                    android:startColor="@color/fireKit_opposite_theme_50" />
            </shape>
        </rotate>
    </item>
    <item android:left="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/fireKit_opposite_theme_50" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="5dp"
                android:left="15dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</layer-list>