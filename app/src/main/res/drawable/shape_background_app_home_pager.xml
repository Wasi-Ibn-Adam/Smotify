<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Shadow Layers-->

    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="2dp"
                android:top="0dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!--################# -->
    <item
        android:left="1.5dp"
        android:top="1.5dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="1.5dp"
                android:top="0dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/firekit_theme_shadow_2" />
        </shape>
    </item>

    <!--################# -->

    <item
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="1dp"
                android:top="0.5dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/firekit_theme_shadow_3" />
        </shape>
    </item>

    <!--ForeGround-->

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/firekit_theme_shadow_3" />
            <corners android:radius="15dp" />

            <solid android:color="@color/transparent" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="5dp"
                android:right="5dp" />
            <corners
                android:topLeftRadius="15dp" android:bottomRightRadius="15dp"
                android:topRightRadius="15dp" android:bottomLeftRadius="15dp"
                />
            <solid android:color="@color/firekit_theme_shadow_3" />
        </shape>
    </item>
</layer-list>
