<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_background_app_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_appdata_display_welcome_title"
            style="@style/Theme.FireKit.DIALOG.WELCOME.TITLE" />

        <TextView
            android:id="@+id/dialog_appdata_display_welcome_text_1"
            style="@style/Theme.FireKit.DIALOG.WELCOME.DESCRIPTION" />

        <TextView
            android:id="@+id/dialog_appdata_display_welcome_text_2"
            style="@style/Theme.FireKit.DIALOG.WELCOME.DESCRIPTION.LIST" />

        <TextView
            android:id="@+id/dialog_appdata_display_welcome_text_3"
            style="@style/Theme.FireKit.DIALOG.WELCOME.DESCRIPTION" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_appdata_display_welcome_btn"
            style="@style/Theme.FireKit.Consent.Account.Item.SELECT"
            android:background="@color/transparent"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:foreground="@drawable/base_continue_1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>