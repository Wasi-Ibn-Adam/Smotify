<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <include layout="@layout/container_app_logo" />

    <com.google.android.material.textfield.TextInputLayout style="@style/Theme.FireKit.REG.TEXT.EDIT.EMAIL.LAY">

        <androidx.appcompat.widget.AppCompatEditText style="@style/Theme.FireKit.REG.TEXT.EDIT.EMAIL" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout style="@style/Theme.FireKit.REG.TEXT.EDIT.PASSWORD.LAY">

        <androidx.appcompat.widget.AppCompatEditText style="@style/Theme.FireKit.REG.TEXT.EDIT.PASSWORD" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout style="@style/Theme.FireKit.REG.TEXT.EDIT.PASSWORD.CONFIRM.LAY">

        <androidx.appcompat.widget.AppCompatEditText style="@style/Theme.FireKit.REG.TEXT.EDIT.PASSWORD.CONFIRM" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        style="@style/Theme.FireKit.APP.BUTTON"
        android:layout_marginTop="10dp"
        android:text="@string/fireKit_action_button_signUp" />
</LinearLayout>

