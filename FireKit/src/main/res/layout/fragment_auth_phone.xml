<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/container_app_logo" />

    <com.lassanit.extras.customviews.PhoneText
        style="@style/Theme.FireKit.TEXT.PHONE"
        android:layout_margin="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Theme.FireKit.APP.BUTTON"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Send Code"
        android:textAllCaps="false" />

    <com.raycoarana.codeinputview.CodeInputView
        style="@style/Theme.FireKit.TEXT.EDIT.CODE"
        android:layout_margin="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_timer"
        style="@style/Theme.FireKit.APP.TEXT"
        android:text="57 Sec"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_resend"
        style="@style/Theme.FireKit.APP.TEXT"
        android:layout_margin="10dp"
        android:text="Resend Code?"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>

